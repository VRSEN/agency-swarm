# =============================================================================
# ERNI-FOTO CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# OpenAI API key with GPT-4.1 Vision access
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model configuration
OPENAI_MODEL=gpt-4.1-vision-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# =============================================================================
# MICROSOFT GRAPH API CONFIGURATION
# =============================================================================
# Azure AD App Registration credentials
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Microsoft Graph API settings
GRAPH_API_VERSION=v1.0
GRAPH_SCOPES=https://graph.microsoft.com/.default

# =============================================================================
# SHAREPOINT CONFIGURATION
# =============================================================================
# SharePoint site and library configuration
SHAREPOINT_SITE_URL=https://yourtenant.sharepoint.com/sites/yoursite
SHAREPOINT_SITE_ID=your-site-id-optional

# Source library (where photos are downloaded from)
SOURCE_LIBRARY_NAME=SourcePhotos
SOURCE_LIBRARY_ID=your-source-library-id-optional

# Target library (where processed photos are uploaded)
TARGET_LIBRARY_NAME=ProcessedPhotos
TARGET_LIBRARY_ID=your-target-library-id-optional

# SharePoint connection settings
SHAREPOINT_TIMEOUT=300
SHAREPOINT_MAX_RETRIES=3
SHAREPOINT_RETRY_DELAY=5

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
# Batch processing settings
BATCH_SIZE=25
MAX_CONCURRENT_DOWNLOADS=5
MAX_CONCURRENT_UPLOADS=3

# Image processing settings
IMAGE_MAX_SIZE=2048
IMAGE_QUALITY=85
SUPPORTED_FORMATS=jpg,jpeg,png,tiff,raw,heic,webp

# AI analysis settings
AI_ANALYSIS_TIMEOUT=60
AI_MAX_RETRIES=3
AI_RETRY_DELAY=2

# =============================================================================
# FILE MANAGEMENT
# =============================================================================
# Local storage configuration
TEMP_DIRECTORY=./temp
DOWNLOAD_DIRECTORY=./downloads
PROCESSED_DIRECTORY=./processed
LOG_DIRECTORY=./logs

# File naming convention
FILENAME_PREFIX=Erni_referenzfoto_
FILENAME_PATTERN={prefix}{sequential_number}.{extension}

# Cleanup settings
CLEANUP_TEMP_FILES=true
KEEP_ORIGINAL_FILES=false
ARCHIVE_PROCESSED_FILES=true

# =============================================================================
# METADATA CONFIGURATION
# =============================================================================
# Language settings
DEFAULT_LANGUAGE=de-DE
METADATA_LANGUAGE=German

# SharePoint field mapping
TITLE_FIELD=Title
DESCRIPTION_FIELD=Description
TAGS_FIELD=Tags
CATEGORY_FIELD=Category
DATE_TAKEN_FIELD=DateTaken
LOCATION_FIELD=Location
PHOTOGRAPHER_FIELD=Photographer

# =============================================================================
# MONITORING AND REPORTING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Progress reporting
PROGRESS_UPDATE_INTERVAL=5
SHOW_PROGRESS_BAR=true

# Notification settings
ENABLE_NOTIFICATIONS=false
NOTIFICATION_EMAIL=admin@yourcompany.com
SMTP_SERVER=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# =============================================================================
# ERROR HANDLING
# =============================================================================
# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=5
EXPONENTIAL_BACKOFF=true
MAX_RETRY_DELAY=60

# Error handling
CONTINUE_ON_ERROR=true
FAIL_FAST=false
ERROR_THRESHOLD=10

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Memory management
MAX_MEMORY_USAGE=2GB
ENABLE_MEMORY_MONITORING=true

# Caching
ENABLE_SCHEMA_CACHE=true
CACHE_EXPIRY_HOURS=24
ENABLE_IMAGE_CACHE=false

# Threading
MAX_WORKER_THREADS=10
THREAD_POOL_SIZE=5

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================
# Development settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
DRY_RUN=false

# Testing configuration
TEST_MODE=false
MOCK_SHAREPOINT=false
MOCK_OPENAI=false
TEST_BATCH_SIZE=5

# =============================================================================
# SECURITY
# =============================================================================
# Security settings
ENABLE_SSL_VERIFICATION=true
SSL_CERT_PATH=
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90

# Access control
REQUIRE_AUTHENTICATION=true
ALLOWED_USERS=
ADMIN_USERS=

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Custom processing rules
ENABLE_DEDUPLICATION=true
DEDUPLICATION_ALGORITHM=sha256
ENABLE_FACE_DETECTION=false
ENABLE_OBJECT_DETECTION=true

# Integration settings
WEBHOOK_URL=
WEBHOOK_SECRET=
ENABLE_WEBHOOKS=false

# Custom metadata fields (JSON format)
CUSTOM_FIELDS={}

# Processing filters
DATE_FILTER_START=
DATE_FILTER_END=
SIZE_FILTER_MIN=100KB
SIZE_FILTER_MAX=50MB
EXCLUDE_PATTERNS=thumbnail,preview,temp
